<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="5dp" >

    <RadioGroup
        android:id="@+id/radiofilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radiotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/radio_text" />

        <RadioButton
            android:id="@+id/radioengineer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_engineer" />

        <RadioButton
            android:id="@+id/radiodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_date" />
    </RadioGroup>

    <EditText
        android:id="@+id/edtsearch"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="2dp"
        android:background="@drawable/edt_roun_rect"
        android:hint="@string/enter_customer"
        android:paddingLeft="3dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1" >

        <EditText
            android:id="@+id/edt_date1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_weight=".5"
            android:background="@drawable/edt_roun_rect"
            android:focusable="false"
            android:hint="To Date"
            android:paddingLeft="3dp" />

        <EditText
            android:id="@+id/edt_date2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_weight=".5"
            android:background="@drawable/edt_roun_rect"
            android:focusable="false"
            android:hint="From Date"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnfilter"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight=".5"
            android:textColor="@android:color/white"
            android:background="@drawable/edt_roun_rect_blue"
            android:gravity="center"
            android:text="FILTER" />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
             android:textColor="@android:color/white"
            android:layout_weight=".5"
             android:background="@drawable/edt_roun_rect_blue"
            android:gravity="center"
            android:text="CANCEL" />
    </LinearLayout>

</LinearLayout>