<resources>

 <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="edittextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/regmargin</item>
        <item name="android:layout_marginRight">@dimen/regmargin</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/edt_roun_rect</item>
        <!-- <item name="android:textColorHint">@color/hintGrey</item> -->
    </style>

    <style name="textviewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/regmargin</item>
        <item name="android:layout_marginRight">@dimen/regmargin</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- <item name="android:textColorHint">@color/hintGrey</item> -->
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>